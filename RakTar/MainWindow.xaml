<Window x:Class="RakTar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RakTar"
        mc:Ignorable="d"
        Foreground="{DynamicResource Theme_TextBrush}">
    <Grid Background="{DynamicResource Theme_BackgroundBrush}" Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar for actions -->
        <StackPanel Grid.Column="0">
            <StackPanel.Background>
                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
            </StackPanel.Background>
            <Image Source="https://www.upload.ee/image/17770504/RakTar.png" Width="298" HorizontalAlignment="Left" />
            <TextBlock Text="Termék felvétele" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Height="53" Width="227" TextAlignment="Center" Foreground="#FF474141" />

            <Button Background="Transparent" Content="Új termékek felvétele" Padding="8,4" Margin="0,0,0,8" HorizontalContentAlignment="Stretch" Height="50" FontWeight="Bold" Foreground="#FF474141"/>
            <Button Background="Transparent" Content="Új termék scannelése" Padding="8,4" Margin="0,0,0,8" HorizontalContentAlignment="Stretch" Height="50" FontWeight="Bold" Foreground="#FF474141"/>
            <Button Background="Transparent" Content="Új termék elhelyezése" Padding="8,4" Margin="0,0,0,8" Width="444" HorizontalContentAlignment="Left" Height="50" FontWeight="Bold" Foreground="#FF474141"/>
            <Button Background="Transparent" Content="Leltár készítése" Padding="8,4" Margin="0,0,0,8" HorizontalContentAlignment="Stretch" Height="50" FontWeight="Bold" Foreground="#FF474141"/>
            <Button Content="Napi feladatok" Padding="8,4" Margin="0,0,0,8" HorizontalContentAlignment="Left" Height="50" FontWeight="Bold" Background="#00353131" Foreground="#FF474141" />
        </StackPanel>

        <!-- Main content area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- New Product Form -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Új Termék Felvétele" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Termék neve:" FontSize="14" Width="150"/>
                            <TextBox Width="300" Height="32"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Darabszám:" FontSize="14" Width="150"/>
                            <TextBox Width="300" Height="32"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Cikkszám:" FontSize="14" Width="150"/>
                            <TextBox Width="300" Height="32"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Beszerzési ár (HUF):" FontSize="14" Width="150"/>
                            <TextBox Width="300" Height="32"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Kategória:" FontSize="14" Width="150"/>
                            <ComboBox Width="300">
                                <ComboBoxItem Content="Elektronika" IsSelected="True"/>
                                <ComboBoxItem Content="Bútor"/>
                                <ComboBoxItem Content="Ruházat"/>
                                <ComboBoxItem Content="Egyéb"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Gyártó:" FontSize="14" Width="150"/>
                            <ComboBox Width="300">
                                <ComboBoxItem Content="Samsung" IsSelected="True"/>
                                <ComboBoxItem Content="Apple"/>
                                <ComboBoxItem Content="Dell"/>
                                <ComboBoxItem Content="LG"/>
                                <ComboBoxItem Content="Egyéb"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Raktári hely:" FontSize="14" Width="150"/>
                            <TextBox Width="300" Height="32" Text="Pl.: A12-Polc3" Foreground="Gray"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Kép csatolása:" FontSize="14" Width="150"/>
                            <Button Width="150" Height="32" Content="Fájl kiválasztása..."/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Width="100" Height="32" Margin="0,0,8,0" Content="Mégse"/>
                        <Button x:Name="Save" Width="180" Height="32" Content="Mentés" Background="#008000" Foreground="White" Click="Save_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
